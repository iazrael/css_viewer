{
    "name": "CSS Viewer",
    "version": "2.0",
    
    "description": "A different and stronger CSS Viewer",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png" 
    },
    
    "browser_action": {
        "default_icon": "icons/icon19.png"
    },
    
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": ["content.js"],
        "css": ["content.css"]
    }],
    
    "background_page": "background.html",
    "permissions": [
        "tabs", "http://*/*", "https://*/*"
    ]
}